package p1;

public class Circle {
	
	double radius; 
	static int numberOfObjects = 0;
	Circle() {
	radius = 1.0;
	numberOfObjects++;
	}
	Circle(double newRadius) {
	radius = newRadius;
	numberOfObjects++;
	}
	int getNumberOfObjects() { return numberOfObjects;
	}
	double getArea() {
	return radius * radius * Math.PI;
	}

}
